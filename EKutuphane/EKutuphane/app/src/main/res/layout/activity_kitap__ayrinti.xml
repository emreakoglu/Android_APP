<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.akarakaya.ekutuphane.Kitap_Ayrinti">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kitap Adı"
        android:id="@+id/textView4"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kütüphane"
        android:id="@+id/textView5"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sayfa Sayisi"
        android:id="@+id/textView6"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Özellik"
        android:id="@+id/textView7"
        android:layout_above="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Yazarlar"
        android:id="@+id/textView8"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ISBN"
        android:id="@+id/textView9"
        android:layout_above="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adet"
        android:id="@+id/textView10"
        android:layout_above="@+id/textView11"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginBottom="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Suanki Adet"
        android:id="@+id/textView11"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/onizleme"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/yazarlar"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/isbn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/isbn"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/adet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/adet"
        android:text="Medium Text"
        android:layout_alignTop="@+id/textView10"
        android:layout_toStartOf="@+id/kirala" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/suanki_adet"
        android:text="Medium Text"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Önizleme"
        android:id="@+id/onizleme"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirala"
        android:id="@+id/kirala"
        android:layout_alignTop="@+id/onizleme"
        android:layout_toEndOf="@+id/suanki_adet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kullanıcı Adı"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/ozellik"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/yazarlar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/sayfa_sayisi"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/ozellik" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/kutuphane"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/sayfa_sayisi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/kitap_adi"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/kutuphane" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/kul_adi"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/kitap_adi" />


</RelativeLayout>
