<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akarakaya.ekutuphane">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InLogin"
            android:label="@string/title_activity_in_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Kutuphane_Liste"
            android:label="@string/title_activity_kutuphane__liste"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".With_Out_Login"
            android:label="@string/title_activity_with__out__login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Kitap_Ayrinti"
            android:label="@string/title_activity_kitap__ayrinti"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Pdf"
            android:configChanges="mcc|mnc|locale|keyboard|keyboardHidden|screenLayout|uiMode|orientation|screenSize"
            android:label="@string/title_activity_pdf"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Onizleme"
            android:label="@string/title_activity_onizleme"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Kirala"
            android:label="@string/title_activity_kirala"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReadEBook"
            android:label="@string/title_activity_read_ebook"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Iade"
            android:label="@string/title_activity_iade"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
